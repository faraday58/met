<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/txtvCVTitle"
            android:text="Entrena"
            android:textSize="45sp"
            android:gravity="center"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgButCVMuestra"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="400dp"
            android:src="@drawable/entrena" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCVDescribe"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:text="Entrena en el lugar que quieras"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCvColeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Vamos a la colección!"
            android:elegantTextHeight="true"

            />


    </LinearLayout>

</androidx.cardview.widget.CardView>